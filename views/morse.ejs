<body>

<!-- Hidden div for storing user id --> 
<% if(locals.user){ %>
<div id="uid" class="hidden"><%= user._id %></div>
<% } %>

<div class="container-fluid content">
	<div class="row">
		<div class="col-md-12">
			<div class="progress">
				<div id="progressText" class="progress-bar" role="progressbar" style="width:0%">
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div id="progressKey">
				<div class="keyBox" id="elKey"></div>
				<div class="keyLabel"><p>Element Space</p></div>
				<div class="keyBox" id="charKey"></div>
				<div class="keyLabel"><p>Character Space</p></div>
				<div class="keyBox" id="wordKey"></div>
				<div class="keyLabel"><p>Word Space</p></div>	
				<a id="help" class="keyLabel" target="_blank" href="http://www.nu-ware.com/NuCode%20Help/index.html?morse_code_structure_and_timing_.htm"><i class="fa fa-question-circle" aria-hidden="true"></i></a>	
			</div>
		</div>
	</div>
	<div class="row input">
		<div class="col-xs-6">
			<label for="text">Morse Code</label>
			<div id="text"></div>
		</div>
		<div class="col-xs-6">
			<label for="correspondingWord">Letter</label>
			<div id="correspondingWord"></div>
		</div>
	</div>
	<div class="row input">
		<div class="col-md-12">
			<div id="translationWrapper">
				<label for="translation">Sentence</label>
				<textarea id="translation" class="form-control custom-control" rows="2" style="resize:none"></textarea> 
				<span id="suggestionBox" class="input-group-addon uppercase">Text Suggestion</span>
			</div>
		</div>
	</div>
	<div class="row input">
		<div class="col-md-12">
			<div class="col-sm-4">
				<button id="btn-play" class="btn btn-labeled btn-primary btn-wide">
					<i class="fa fa-play" aria-hidden="true"></i> Play <span class="btn-label">---.</span>
				</button>
			</div>
			<div class="col-sm-4">
				<button id="btn-delete" class="btn btn-labeled btn-danger btn-wide">
					<i class="fa fa-trash" aria-hidden="true"></i> Delete <span class="btn-label">----</span>
					</button>
			</div>
			<div class="col-sm-4">
				<button id="btn-suggest" class="btn btn-labeled btn-success btn-wide disabled">
					<i class="fa fa-check" aria-hidden="true"></i> Take Top Suggestion <span class="btn-label">..--</span>
				</button>
			</div>
		</div>
	</div>
</div>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p class="copyright text-muted">Copyright &copy; Morse Decoder 2017</p>
            </div>
        </div>
    </div>
</footer>

</body>

</html>