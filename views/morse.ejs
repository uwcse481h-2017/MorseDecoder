<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Morse Decoder</title>

		<!-- BOOTSTRAP --> 
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<!-- Latest compiled JavaScript -->
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		
		<!-- ANGULAR -->
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

		<!-- FONT AWESOME -->
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

		<!-- RESPONSIVE VOICE (TTS) -->
		<script src="http://code.responsivevoice.org/responsivevoice.js"></script>

		<!-- PERSONAL -->
		<!-- CSS --> 
		<link rel="stylesheet" type="text/css" href="../css/morse.css">
		<!-- JS --> 
		<script  type="text/javascript" src="../js/morse.js"></script>
		<!-- ICON -->
    	<link rel="shortcut icon" href="../data/tap.png">
	</head>

	<body>
	<audio id="audio" src="../data/beep.wav"></audio>

		<!--<h1><img src="../data/tap.png" alt="Tap">Morse Decode</h1>-->

    <!-- Nav -->
    <nav id="mynav" class="navbar">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><img id="logo" src="../data/tap.png" alt="Tap"></a>
                <a class="navbar-brand" href="/">Morse Decode</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <% if(locals.user){ %>
                <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i><%= user.general.username %> <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/profile">My Profile</a></li>                        
                        <li><a href="/signout">Sign Out</a></li>
                    </ul>
                </li>
            </ul>
            <% } else{ %>  
                <div class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/signin">Sign In</a></li>
						<li><a href="/signup">Sign Up</a></li>
					</ul>
				</div>
            <% } %>
        </div>
    </nav>
    <!-- /.Nav -->

		<div class="container-fluid text-center">

			<div>
				<div class="form-group" id="training">
					<label for="trainingWord">Training Word:</label>
					<input class="form-control form-fixed-width" id="trainingWord" type="text" placeholder="Training Word">
					<button class="btn btn-primary" id="confirmWord" onclick="hello()">Confirm</button>
					
				</div>

				<div id="displayDiv">
					<div id="morseInput">
						<div class="btn btn-info" id="codeInput">Input</div>
						<div id ="buttonDiv">
							<button class="btn btn-primary" id="train">Calibrate</button>
							<button id="test" class="btn btn-success" disabled>Decode</button>
							<button id="clear" class="btn btn-default">Clear</button>
						</div>
					</div>
					<br>
					<div id="letterDiv">
						<legend class="Translated signals">Letters:</legend>
						<h2 id="letter"></h2>
						<button class="btn btn-default" id="copy" data-copytarget="#letter"><i class="fa fa-clipboard" aria-hidden="true"></i>Copy to Clipboard</button>
						<button class="btn btn-default" onclick="responsiveVoice.speak($('#letter').text().trim().toLowerCase()); console.log($('#letter').text().trim().toLowerCase())" type="button" value="Play"><i class="fa fa-play" aria-hidden="true"></i>Play</button>
					</div>
				</div>
			</div>

			<div id ="canvasDiv">
				<h3>Dots/Dashes</h3>
				<canvas id="liveStreamCanvas" width="1000" height="60" ></canvas>

				<h3>All Signals</h3>
				<canvas id="myCanvas" width="1000" height="120"></canvas>
			</div>

			<br/>
			<br/>

			<table class="legend">
				<tr>
					<td class="color" id="blue"></td>
					<td>Dot</td>
					<td class="color" id="pink"></td>
					<td>Dash</td>
					<td class="color" id="red"></td>
					<td>Element Space</td>
					<td class="color" id="green"></td>
					<td>Character Space</td>
					<td class="color" id="black"></td>
					<td>Unclassified Signal</td>
				</tr>
			</table>
		</div>

	</body>
</html>

<script>
function hello() {
	responsiveVoice.speak("hello world");
	console.log('hi')
}
</script>
