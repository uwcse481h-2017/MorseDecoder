<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    
    <title>Morse Decoder</title>

    <!-- BOOTSTRAP -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <!-- PERSONAL -->
    <!-- CSS -->
    <link rel="stylesheet" href="../css/sign.css">
    <!-- ICON -->
    <link rel="shortcut icon" href="../data/logo_square_fill.png">
    <script src="../js/switchImage.js" type="text/javascript"></script>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <div id="header" class="wrapper text-center">
                <img id="logo" src="../data/logo_square_fill.png"></i>
                <a href="/" id="brand"><h1>Morse Decoder</h1></a>
            </div>

            <div class="user-form">

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <h3> Sign in </h3>

                <form action="/signin" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" id="btn-login" class="btn btn-default">Sign In</button>
                </form>

                <hr>

                <p>New to Morse Decoder? <a href="/signup">Create an account.</a></p>
            </div>
        </div>
    </div>
</body>
</html>