<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title> Morse Decode </title>

    <!-- BOOTSTRAP -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    
    <!-- ANGULAR -->
    <!-- Angular -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
   
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <!-- PERSONAL -->
    <!-- CSS -->
    <link rel="stylesheet" href="../css/sign.css">
    <!-- ICON -->
    <link rel="shortcut icon" href="../data/flask.png">
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <div id="header" class="wrapper text-center">
                <img id="logo" src="../data/logo_square_fill.png"></i>
                <a href="/" id="brand"><h1>Morse Decoder</h1></a>
            </div>

            <div class="user-form">

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <h3> Sign in </h3>

                <form action="/signin" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" id="btn-login" class="btn btn-default">Sign In</button>
                </form>

                <hr>

                <p>New to Morse Decoder? <a href="/signup">Create an account.</a></p>
            </div>
        </div>
    </div>
</body>
</html>