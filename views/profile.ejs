                            <option value="Thai Female">Thai Female</option>
                            <option value="Vietnamese Male">Vietnamese Male</option>
                            <option value="Welsh Male">Welsh Male</option>
                        </select>
                    </div>
                    <button class="btn btn-default">Select Language</button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3> Abbreviations </h3>

                <div id="abbreviations"></div>
                <table id="abbrTable" class="table"> 
                    <thead> 
                        <th class="col-md-2">#</th> 
                        <th style="display: none"> ID </th> 
                        <th class="col-md-5">Abbreviated Phrase</th> 
                        <th class="col-md-5">Full Phrase</th> 
                        <th class="col-md-1"> </th> </tr> 
